name: test_docs
on: [push, pull_request]
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v1
    - uses: actions/setup-python@v1
      with:
        python-version: '3.6 - 3.9'
        architecture: 'x64'

    - name: check docs 
      run: |
        pip install -e .
        pip install --upgrade pip && pip install mkdocs-material mkdocstrings mkdocs-jupyter
        mkdocs build
